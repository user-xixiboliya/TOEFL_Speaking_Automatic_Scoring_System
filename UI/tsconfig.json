{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "types": ["vite/client"],
    "resolveJsonModule": true,

    "useDefineForClassFields": true,
    "isolatedModules": true
  },
  "include": ["src", "vite.config.ts", "scripts"]
}